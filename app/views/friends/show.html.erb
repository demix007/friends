<div class="jumbotron">

  <h1 class="display-3">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  
  <br>

  <p class="lead">
    <%= @friend.email %>  || 
    <%= @friend.phone %>  || 
    <%= @friend.twitter %>
  </p>

  <br>

  <%= link_to 'Edit', edit_friend_path(@friend), class: "btn btn-warning" %>
  <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  <%= link_to 'Back', friends_path, class: "btn btn-primary" %>

</div>